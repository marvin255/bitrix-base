{
    "name": "marvin255/bitrix-base",
    "type": "project",
    "require": {
        "ext-gd": "*",
        "ext-openssl": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "ext-mysqli": "*",
        "ext-libxml": "*",
        "ext-json": "*",
        "ext-pcre": "*",
        "ext-soap": "*",
        "ext-sockets": "*",
        "ext-zlib": "*",
        "ext-hash": "*",
        "symfony/console": "~3.4",
        "marvin255/bxmigrate": "~3.0",
        "marvin255/bxcodegen": "~0.7",
        "marvin255/bxrocketeer": "dev-master"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~2.2",
        "codeception/codeception": "^2.3"
    },
    "autoload": {
        "psr-4": { "app\\": "lib/" }
    },
    "scripts": {
        "post-create-project-cmd": [
            "app\\composer\\Installer::postCreateProject",
            "app\\composer\\Installer::configureProject"
        ]
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/marvin255/bxrocketeer"
        }
    ]
}
